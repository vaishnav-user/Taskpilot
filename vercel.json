{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/dist/$1"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/dist/index.html"
        }
    ]
}